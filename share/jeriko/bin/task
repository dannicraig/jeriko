#!/bin/bash
#description: wrapps around a command in order to create a task

$@ 2>&1 | (while read LINE; do echo "[t:$$] $LINE"; done) && exit 0
	TODO_TASK_FILE_NAME="redo.`echo $@ | sed. -e 's/[^0-9a-zA-Z]/_/g' -e 's/_+/_/g'`.`date +%s`.task"

	echo "$@ && rm -rf $TODO_TASK_FILE_NAME" > $TODO_TASK_FILE_NAME
	chmod +x $TODO_TASK_FILE_NAME

	wait
