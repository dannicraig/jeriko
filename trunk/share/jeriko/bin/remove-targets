#!/bin/sh

if [ -f targets.txt ]
then
	TMPFILE=`mktemp`

	if [ "$@" ]
	then
		for TARGET_TO_REMOVE in $@
		do
			cat targets.txt | grep -v $TARGET_TO_REMOVE > $TMPFILE
			cp $TMPFILE targets.txt
		done
	else
		cat | while read TARGET_TO_REMOVE
		do
			cat targets.txt | grep -v $TARGET_TO_REMOVE > $TMPFILE
			cp $TMPFILE targets.txt
		done
	fi

	rm $TMPFILE
fi
